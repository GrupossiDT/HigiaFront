<button onclick={{action "mostrar_ventana" "actualizar" }}>Actualizar</button>
{{#bs-modal open=mdlComponent onHidden=(action (mut mdlComponent) false) as |modal|}}
  {{#modal.header}}
    <h2 class="modal-title">
      {{frmTitle}}
    </h2>
  {{/modal.header}}
  {{#modal.body}}
    {{component frmComponent model=record}}
  {{/modal.body}}
  {{#modal.footer}}
    {{#bs-button onClick=(action modal.close)}}Cancel{{/bs-button}}
  {{/modal.footer}}
{{/bs-modal}}
