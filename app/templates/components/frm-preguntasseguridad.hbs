
<div class="starter-template">
<div class="container">
  <div class="row">
      <div class="col-xs-12 col-sm-6 padding-top">
    <div class="form">
      <form>
        <div class="form-group">
          <label>Pregunta:</label>
          {{cntrl-select
             externalModel=model
             externalSelect="id_prgnt_sgrdd_ge"
             model=Prgntsge
             main=true
             tagid="prgntsge"
             text="Seleccione una Pregunta ..." valor_selecionado=model.id_prgnt_sgrdd_ge
             url="/api/preguntasSg/listar"
             parent=model.id_prgnt_sgrdd_ge
             data=(concat '{"id_prgnt_sgrdd_ge":"' model.id_prgnt_sgrdd_ge '","id_mnu_ge":"330"}')
           }}
          <div class="error_text">{{validationErrors.dscrpcn}}</div>
        </div>
        <div class="form-group">
          <label>Respuesta:</label>
          {{input class="form-control" name="rspsta" value=model.rspsta}}
          <div class="error_text">{{validationErrors.rspsta}}</div>
        </div>
        {{#if model.id}}
        <div class="form-group">
          <label>Estado:</label>
          <select class="form-control" id="chg_estdo" {{action 'cambioEstado' on='change'}}>
              <option  value='ACTIVO'  selected={{ifcond model.estdo "ACTIVO"}} >ACTIVO</option>
              <option  value='INACTIVO' selected={{ifcond model.estdo "INACTIVO"}} >INACTIVO</option>
          </select>
        </div>
        {{/if}}
        <div class="btn-group">
          <div class="alert alert-success" role="alert"  id="success" hidden></div>
          <div class="alert alert-danger" role="alert" id="danger" hidden></div>
          {{#if model.id}}
                {{input type="hidden" name="id" value=model.id}}
                <button type="submit" class="btn btn-info" {{action 'actualizar' on='click' }}>Actualizar</button>
          {{else}}
                <button type="submit" class="btn btn-info" {{action 'crear' on='click' }}>Crear</button>
          {{/if}}
        </div>
      </form>
    </div>
      </div>
  </div>
</div>
</div>
