<h2>Crear Usuario</h2>
<div class="starter-template">

{{#each model as |usuario|}}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 padding-top">
			<div class="form">
				<form enctype="multipart/form-data">
					<div class="form-group">
						<label>Nombre Usuario:</label>
						{{input class="form-control" name="nombre_usuario" maxlength="60" value=usuario.nombre_usuario}}
						<div class="error_text">{{validationErrors.nombre_usuario}}</div>
					</div>
					<div class="form-group">
						<label>Usuario:</label>
						{{input class="form-control" name="login" maxlength="25" value=usuario.login}}
						<div class="error_text">{{validationErrors.login}}</div>
					</div>
					<div class="form-group">
						<label>Contrase√±a:</label>
						{{input type="password" class="form-control" name="password" maxlength="40" value=usuario.password}}
						<div class="error_text">{{validationErrors.password}}</div>
					</div>
					<div class="form-group">
						<label>Foto:</label>
						{{input type="file" class="form-control" name="imge_pth" id="imge_pth" value=usuario.imge_pth}}
						<div class="error_text">{{validationErrors.imge_pth}}</div>
					</div>
					<div class="btn-group">
						{{input type="hidden"  name="id" value=usuario.id}}
						<button type="submit" class="btn" {{action 'save' on='click' }}>Crear</button>
					</div>
				</form>
			</div>
        </div>
    </div>
</div>
{{/each}}
{{yield}}
</div>
